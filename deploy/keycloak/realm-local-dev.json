{
  "realm": "local-dev",
  "enabled": true,
  "displayName": "Local Dev",
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "roles": {
    "realm": [
      {
        "name": "read:hello",
        "description": "Can read hello API"
      }
    ]
  },
  "clients": [
    {
      "id": "backend-caller",
      "clientId": "backend-caller",
      "name": "Backend Caller",
      "description": "Client used by backend-to-backend calls against simple-api",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "backend-caller-secret",
      "clientAuthenticatorType": "client-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "defaultClientScopes": [],
      "optionalClientScopes": [],
      "fullScopeAllowed": false,
      "redirectUris": [
        "http://localhost:8080/swagger-ui/oauth2-redirect.html",
        "http://127.0.0.1:8080/swagger-ui/oauth2-redirect.html"
      ],
      "webOrigins": [
        "http://localhost:8080",
        "http://127.0.0.1:8080"
      ],
      "protocolMappers": [
        {
          "name": "hardcoded realm role read:hello",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-role-mapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "id.token.claim": "false",
            "userinfo.token.claim": "false",
            "introspection.token.claim": "true",
            "role": "read:hello"
          }
        },
        {
          "name": "realm roles to claim",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "id.token.claim": "false",
            "userinfo.token.claim": "false",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true"
          }
        }
      ],
      "attributes": {
        "access.token.lifespan": "300"
      }
    }
  ]
}
